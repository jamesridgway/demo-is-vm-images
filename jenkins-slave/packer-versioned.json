{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "profile": "demo",
      "region": "eu-west-1",
      "instance_type": "t3.small",
      "ssh_username": "ubuntu",
      "ami_name": "jenkins-slave {{timestamp}}",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu-1804*"
        },
        "owners": [
          "self"
        ],
        "most_recent": true
      },
      "associate_public_ip_address": true,
      "tags": {
        "Name": "Jenkins Slave",
        "Project": "Core",
        "Commit": "fb66819d96bb7ab6e870d71a72a8d5edd0d2b1de"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../demo-salt/salt",
      "destination": "~/salt"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/init.sh"
      ]
    }
  ]
}
